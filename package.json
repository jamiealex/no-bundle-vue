{
  "name": "no-bundle-vue",
  "version": "0.0.4",
  "author": "Jamie Spittal, Alexandre Bonaventure",
  "license": "MIT",
  "source": "src/index.ts",
  "bin": "bin/no-bundle-vue.js",
  "main": "dist/no-bundle-vue.umd.js",
  "module": "dist/no-bundle-vue.modern.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/jamiealex/no-bundle-vue",
  "homepage": "https://github.com/jamiealex/no-bundle-vue",
  "bugs": "https://github.com/jamiealex/no-bundle-vue/issues",
  "keywords": [
    "vue",
    "no bundle"
  ],
  "scripts": {
    "build": "rm -fr dist && microbundle -f modern,umd",
    "dev:build": "ts-node -O '{ \"module\": \"CommonJS\" }' ./src/index.ts",
    "dev:serve": "servor ./example/dist",
    "example": "cd example && yarn && cd .. && yarn build && node ./bin/no-bundle-vue.js -s './example/src' -o './example/dist' && servor ./example/dist"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "glob": "^7.1.6",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.2",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-vue": "^5.0.0",
    "snowpack": "^1.7.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "^13.13.4",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.21",
    "eslint": "^6.8.0",
    "microbundle": "^0.12.0-next.8",
    "servor": "^3.2.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11"
  },
  "peerDependencies": {
    "vue": "^2.6.0",
    "vue-template-compiler": "^2.6.11"
  }
}
